# Application Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=123456

# WeChat Configuration
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret

# WeChat Pay Configuration
WXPAY_MCHID=your-merchant-id
WXPAY_API_KEY=your-api-key
WXPAY_API_CERT_PATH=cert/apiclient_cert.pem
WXPAY_API_KEY_PATH=cert/apiclient_key.pem

# Alipay Configuration
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY=your-private-key
ALIPAY_PUBLIC_KEY=your-public-key

# Email Configuration (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@example.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# SMS Configuration
SMS_ACCESS_KEY=your-sms-access-key
SMS_ACCESS_SECRET=your-sms-access-secret
SMS_SIGN_NAME=your-sms-sign-name
SMS_TEMPLATE_CODE=your-sms-template-code

# Push Notification Configuration
PUSH_SERVICE_API_KEY=your-push-api-key
PUSH_SERVICE_AUTH_DOMAIN=your-auth-domain

# Logging Configuration
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGIN=http://localhost:8080,http://localhost:8081